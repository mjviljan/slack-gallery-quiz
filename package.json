{
  "name": "slack-gallery-quiz",
  "version": "0.1.0",
  "description": "A quiz using Slack account images and asking the user to recognize the people",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && parcel build src/index.html",
    "deploy": "yarn build && firebase deploy",
    "start": "parcel src/index.html",
    "test:watch": "jest --watchAll"
  },
  "author": "mjviljan",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^4.8.0",
    "@types/dotenv": "^6.1.0",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "dotenv": "^6.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "firebase": "^5.7.2",
    "firebase-tools": "^6.2.2",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.11.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ]
  }
}
